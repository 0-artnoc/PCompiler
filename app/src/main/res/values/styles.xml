<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="colorAccent">@color/light_colorAccent</item>
        <item name="icon_color">@android:color/black</item>
        <item name="android:statusBarColor">@color/common_status_bar</item>
        <item name="android:colorControlHighlight">@color/control_hl</item>
        <item name="android:listDivider">@null</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_colorAccent</item>
        <item name="android:windowBackground">@color/dark_windowBackground</item>
        <item name="icon_color">@android:color/white</item>
        <item name="android:statusBarColor">@color/common_status_bar_dark</item>
        <item name="android:colorControlHighlight">@color/control_hl</item>
        <item name="android:listDivider">@null</item>
    </style>

    <style name="DialogLight" parent="Theme.Design.Light.BottomSheetDialog"/>
    <style name="DialogDark" parent="Theme.Design.BottomSheetDialog"/>
</resources>
